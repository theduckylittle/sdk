{
    "parser": "babel-eslint",
    "plugins": [
        "promise"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["react-app", "openlayers"],
    "rules": {
        "comma-dangle": 0,
        "import/no-extraneous-dependencies": 0,
        "no-console": ["error", {
            "allow" : ["warn", "error"]
        }],
        "no-plusplus" : ["error", {
            "allowForLoopAfterthoughts": true,
        }],
        "camelcase": 0,
        "promise/catch-or-return": "warn",
    },
    "settings" : {
        "import/resolver": {
            "webpack" : {
                "config" : "webpack-dev-server.config.js"
            }
        }
    }
}
